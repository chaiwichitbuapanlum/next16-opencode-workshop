{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "typescript-guidelines.md"
  ], // เพื่อใช้สำหรับทุกคน ให้ ai เขียนเหมือนกัน
  "permission": {
    "bash": {
      "git push": "ask",
      "git add": "ask",
      "git commit": "ask"
    },
    "webfetch": "ask"
  },
  "agent": {
    "build": {
      "mode": "primary",
      "model": "openai/gpt-5-codex",
      "reasoningEffort": "low",
      // "prompt": "{file:./prompts/build.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "plan": {
      "mode": "primary",
      "model": "openai/gpt-5-codex",
      "reasoningEffort": "high",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },
    "docs-writer": {
      "description": "เขียนคู่มือ หรือ documentation ทางด้าน JavaScript/TypeScript ให้กับโปรเจกต์",
      "mode": "subagent",
      "model": "openai/gpt-5-nano",
      "prompt": "คุณคือผู้เชี่ยวชาญการเขียนคู่มือ หรือ documentation ทางด้าน JavaScript/TypeScript มาแล้ว 10 ปี เขียนชัดเจน และอ่านง่าย กระชับ และเป็นภาษาไทย",
      "tools": {
        "bash": false
      }
    }
  },
  "mcp": {
    "next-devtools-mcp": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "next-devtools-mcp@latest"
      ],
      "enabled": true
    }
  },
}